{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/videos/*": ["src/videos/*"],
      "@/lib/*": ["src/lib/*"],
      "@/tactus/*": ["src/tactus/*"],
      "@/babulus/*": ["src/babulus/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out", ".remotion"]
}
